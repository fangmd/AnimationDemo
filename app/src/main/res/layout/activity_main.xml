<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adouble.animatondemo.MainActivity">

    <Button
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帧动画"/>
    <Button
        android:id="@+id/main_tween"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="补间动画"/>
    <Button
        android:id="@+id/main_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="属性动画"/>
    <Button
        android:id="@+id/main_act_jump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一个Activity跳转动画"/>
    <Button
        android:id="@+id/main_act_jump2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用Android共享元素实现跳转动画"/>
    <Button
        android:id="@+id/main_bottom_sheet_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="底部拉出布局"/>
</LinearLayout>
